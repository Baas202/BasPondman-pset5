<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="baas202.baspondman_pset5">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShowTaskList" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UpdateTasks" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" android:label="@string/app_name"/>
        <activity android:name=".AddNewTask" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" android:label="@string/app_name"/>
        <activity android:name=".DeleteAllTask" android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" android:label="@string/app_name"/>


    </application>

</manifest>